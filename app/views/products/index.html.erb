<!-- content -->
<div class="container">
	<div class="hero-unit">
		<i><h1>Listing products</h1></i>
	</div>
	<div class="row">
		<% @products.each do |product| %>
			<div class ="span4">
				<center>
				<%= image_tag(product.image_url, class: 'list_image') %></br>
				<i><h4><%= product.title %></h4></br></i>
				<%= truncate(strip_tags(product.description),length: 80) %></br></br>
				<div class="btn-group">
				  <button class="btn"><%= link_to 'Show', product %></button>
				  <button class="btn"><%= link_to 'Edit', edit_product_path(product) %></button>
				  <button class="btn"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
				</div>
			</center>
			</div>
		<% end %>
	</div>
</div>
</br>
</br>
<%= link_to 'New product', new_product_path %>